{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "jsx": "react-jsx", 
    "jsxImportSource": "react",
    "types": []
  },
  "include": [
    "hooks/**/*.ts",
    "hooks/**/*.tsx"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist"
  ]
}
